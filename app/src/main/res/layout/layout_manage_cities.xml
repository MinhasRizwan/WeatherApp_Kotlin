<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/currentStatus"
>

    <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/search_city_here"
            android:completionThreshold="1"
            android:dropDownSelector="@color/lightBlue"
            android:textColor="@color/white"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:textStyle="bold"
            android:text="@string/added_cities"
            android:layout_marginTop="24dp"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewAddedCities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            tools:listitem="@layout/layout_addedcities_list"
    >
    </androidx.recyclerview.widget.RecyclerView>

</androidx.appcompat.widget.LinearLayoutCompat>